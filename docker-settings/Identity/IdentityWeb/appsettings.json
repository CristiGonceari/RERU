{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "IdentityServer": {
    "ApiScopes": [
      {
        "Name": "core"
      },
      {
        "Name": "personal"
      },
      {
        "Name": "evaluation"
      }
    ],
    "Clients": [
      {
        "ClientId": "Dashboard-WEB",
        "ClientName": "ERP Dashboard front end",
        "AllowedGrantTypes": ["implicit"],
        "AllowedScopes": ["openid", "core"],
        "RedirectUris": ["http://localhost:10000/#/auth-callback#"],
        "PostLogoutRedirectUris": ["http://localhost:4200/"],
        "AllowedCorsOrigins": ["http://localhost:4200"],
        "AllowAccessTokensViaBrowser": true,
        "AccessTokenLifetime": 3600
      },
      {
        "ClientId": "Dashboard-WEB-local",
        "ClientName": "ERP Dashboard front end",
        "AllowedGrantTypes": ["implicit"],
        "AllowedScopes": ["openid", "core"],
        "RedirectUris": ["http://localhost:4200/#/auth-callback#"],
        "PostLogoutRedirectUris": ["http://localhost:4200/"],
        "AllowedCorsOrigins": ["http://localhost:4200"],
        "AllowAccessTokensViaBrowser": true,
        "AccessTokenLifetime": 3600
      },
      {
        "ClientId": "Personal-WEB-local",
        "ClientName": "ERP Personal front end",
        "AllowedGrantTypes": ["implicit"],
        "AllowedScopes": ["openid", "core", "personal"],
        "RedirectUris": ["http://localhost:4200/#/auth-callback#"],
        "PostLogoutRedirectUris": ["http://localhost:4200/"],
        "AllowedCorsOrigins": ["http://localhost:4200"],
        "AllowAccessTokensViaBrowser": true,
        "AccessTokenLifetime": 3600
      },
      {
        "ClientId": "ERP-Web-client-localhost",
        "ClientName": "ERP web client",
        "AllowedGrantTypes": ["implicit"],
        "AllowedScopes": ["openid", "core", "personal", "evaluation"],
        "RedirectUris": ["http://localhost:4200/#/auth-callback#"],
        "PostLogoutRedirectUris": ["http://localhost:4201/"],
        "AllowedCorsOrigins": ["http://localhost:4201"],
        "AllowAccessTokensViaBrowser": true,
        "AccessTokenLifetime": 3600
      },
      {
        "ClientId": "Personal-WEB",
        "ClientName": "ERP Personal front end",
        "AllowedGrantTypes": ["implicit"],
        "AllowedScopes": ["openid", "core", "personal"],
        "RedirectUris": ["http://localhost:10000/personal/#/auth-callback#"],
        "PostLogoutRedirectUris": ["http://localhost:4201/"],
        "AllowedCorsOrigins": ["http://localhost:4201"],
        "AllowAccessTokensViaBrowser": true,
        "AccessTokenLifetime": 3600
      }
    ]
  }
}
